<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_content_item_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:transitionName="categoryImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_content_item_title"
            tools:src="@mipmap/set_pswd_bg"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content_item_like"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_20"
            android:layout_marginStart="@dimen/padding_5"
            android:layout_marginBottom="@dimen/padding_5"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_content_item_title"
            android:textSize="@dimen/text_size_10"
            android:text="1522赞"
            android:textColor="@color/color_write"
            android:background="@drawable/ic_image_count_bg"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content_item_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_20"
            android:paddingStart="@dimen/padding_10"
            android:gravity="center"
            android:paddingEnd="@dimen/padding_10"
            android:layout_marginEnd="@dimen/padding_5"
            android:layout_marginBottom="@dimen/padding_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_content_item_title"
            android:textSize="@dimen/text_size_10"
            android:text="55P"
            android:textColor="@color/color_write"
            android:background="@drawable/ic_image_count_bg"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_content_item_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:background="@color/color_write"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_13"
            android:text="韵味女神陈秋雨胸丰腰细勾人魂魄火辣酮体引人入迷韵味女神陈秋雨胸丰腰细勾人魂魄火辣酮体引人入迷"
    />

</androidx.constraintlayout.widget.ConstraintLayout>