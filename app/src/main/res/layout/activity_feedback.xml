<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root_home"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FeedbackActivity"
        android:background="@color/color_write"
>

    <com.meirenmeitu.base.define.CustomToolbar
            android:id="@+id/ct_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ct_center_text_info="@string/comm_feedback"
            app:ct_right_text_info="@string/comm_submit_feedback"
            app:ct_right_text_size="@dimen/text_size_13"
            app:ct_right_text_visible="false"
            app:ct_view_background_color="@color/main_theme_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />


    <EditText
            android:id="@+id/et_content_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:minHeight="@dimen/height_150"
            android:padding="@dimen/padding_8"
            android:layout_margin="@dimen/padding_20"
            android:background="@drawable/shape_stroke_pink_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ct_toolbar"
    />

    <Button
            android:id="@+id/btn_submit_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_60"
            android:layout_marginTop="@dimen/padding_20"
            android:text="提交"
            android:textColor="@color/color_write"
            android:textSize="@dimen/text_size_16"
            android:layout_marginStart="@dimen/padding_20"
            android:layout_marginEnd="@dimen/padding_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_content_feedback"
    />



</androidx.constraintlayout.widget.ConstraintLayout>