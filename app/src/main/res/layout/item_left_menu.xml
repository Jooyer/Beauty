<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_icon_item_left_menu"
        android:layout_width="@dimen/width_20"
        android:layout_height="@dimen/height_20"
        android:contentDescription="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/padding_20"
        />


    <TextView
        android:id="@+id/tv_name_item_left_menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_50"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/padding_10"
        android:layout_marginStart="@dimen/padding_10"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintLeft_toRightOf="@+id/iv_icon_item_left_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/view_divider"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/color_DFDFDF"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

